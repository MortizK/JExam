<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dhbw.koehler.jexam.controller.tabXMLController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" prefWidth="240">
            <styleClass>
                <String fx:value="panel"/>
                <String fx:value="panel-default"/>
                <String fx:value="padding-md"/>
            </styleClass>

            <TreeView fx:id="xmlTreeView" VBox.vgrow="ALWAYS">
                <styleClass>
                    <String fx:value="list-group"/>
                </styleClass>
            </TreeView>

        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="10">
            <styleClass>
                <String fx:value="panel"/>
                <String fx:value="panel-default"/>
                <String fx:value="padding-md"/>
                <String fx:value="bg-white"/>
            </styleClass>

            <HBox fx:id="breadCrumbs" spacing="8"/>
            <VBox fx:id="xmlMainContent" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>

</BorderPane>
